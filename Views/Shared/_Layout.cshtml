<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Team Management System</title>
    
    <!-- ==> Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- ==> Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    
    <!-- ==> Custom CSS -->
    <style>
        body {
            padding-top: 70px;
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .card {
            box-shadow: 0 0 10px rgba(0,0,0,.1);
            margin-bottom: 20px;
        }

        .table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }

        .badge {
            padding: 5px 10px;
            font-size: 0.9em;
        }

        /* Hide uncompiled Vue templates */
        [v-cloak] {
            display: none !important;
        }
    </style>
</head>
<body>
    <!-- ==> Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-project-diagram"></i> Team Management System
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">
                            <i class="fas fa-user-shield"></i> Admin Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/UserDashboard/Tasks" target="_blank">
                            <i class="fas fa-user"></i> User Tasks
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ==> Main Content -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- ==> Footer -->
    <footer class="mt-5 py-3 bg-dark text-white text-center">
        <p>&copy; @DateTime.Now.Year - Team Management System | Built with ASP.NET MVC, SignalR & Vue.js</p>
    </footer>

    <!-- ==> Load JavaScript libraries in correct order -->
    <!-- 1. jQuery (required by Bootstrap and SignalR) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- 2. Bootstrap JS (requires jQuery) -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- 3. SignalR (requires jQuery) -->
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>

    <!-- 4. SignalR Hubs (auto-generated, requires SignalR) -->
    <script src="~/signalr/hubs"></script>

    <!-- 5. Vue.js (production build for faster loading) -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.min.js"></script>

    <!-- 6. Page-specific scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
